<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="560.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.dii.inginf.dmml.soundhabit.controller.AdminPageController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
      <children>
            <Label layoutX="250.0" layoutY="34.0" text="Add a new Song">
               <font>
                  <Font name="System Bold Italic" size="40.0" />
               </font>
            </Label>
            <Label layoutX="40.0" layoutY="137.0" text="Title:">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <TextField fx:id="songTitle" layoutX="108.0" layoutY="133.0" prefHeight="36.0" prefWidth="231.0" promptText="Insert song title...">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Label layoutX="423.0" layoutY="135.0" text="Author:">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <TextField fx:id="songAuthor" layoutX="521.0" layoutY="134.0" prefHeight="36.0" prefWidth="231.0" promptText="Insert author...">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Label layoutX="40.0" layoutY="220.0" text="Link to the song:">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <TextField fx:id="songUrl" layoutX="224.0" layoutY="218.0" prefHeight="36.0" prefWidth="541.0" promptText="Insert song URL...">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Label layoutX="40.0" layoutY="308.0" text="Link to the image:">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <TextField fx:id="imageUrl" layoutX="225.0" layoutY="306.0" prefHeight="36.0" prefWidth="541.0" promptText="Insert image URL...">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Label layoutX="214.0" layoutY="395.0" text="Genre">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <ComboBox fx:id="genresComboBox" layoutX="311.0" layoutY="393.0" prefHeight="36.0" prefWidth="178.0" promptText="Select genre..." visibleRowCount="6" />
            <Button fx:id="classifyButton" layoutX="508.0" layoutY="393.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="87.0" text="CLASSIFY">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="clearFieldsButton" layoutX="281.0" layoutY="470.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="117.0" text="Clear Fields">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="insertSongButton" layoutX="450.0" layoutY="470.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="117.0" text="Insert Song">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
